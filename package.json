{
  "name": "reccall",
  "version": "1.0.0",
  "description": "RecCall: Record and call context shortcuts across AI IDEs and environments (Cursor, VSCode, Warp, CLI)",
  "type": "module",
  "main": "index.js",
  "bin": {
    "reccall": "./dist/src/cli.js",
    "reccall-mcp": "./index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint . --ext .ts,.js --ignore-pattern 'index.js'",
    "lint:fix": "eslint . --ext .ts,.js --fix --ignore-pattern 'index.js'",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "mcp",
    "cursor",
    "vscode",
    "warp",
    "cli",
    "context",
    "shortcuts",
    "reccall",
    "ai-ide"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.0"
  }
}
